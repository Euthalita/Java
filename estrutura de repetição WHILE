import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		System.out.println("Escreva um número ou tecle 0 para parar.");
		
    int num = ler.nextInt();
		while (num != 0){
		    System.out.println("Escreva um número:");
		    num = ler.nextInt();
		}
		
		ler.close();
		
	}
}
